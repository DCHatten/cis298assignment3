<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/wine_description_label"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/wine_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/wine_description_hint"
        style="?android:listSeparatorTextViewStyle"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wine_id_label"
            style="?android:listSeparatorTextViewStyle"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/wine_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/wine_id_label"
            style="?android:listSeparatorTextViewStyle"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wine_case_label"
            style="?android:listSeparatorTextViewStyle"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/wine_case"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wine_case_label"
            style="?android:listSeparatorTextViewStyle"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/wine_active_label"
            style="?android:listSeparatorTextViewStyle"/>

        <CheckBox
            android:id="@+id/wine_is_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>