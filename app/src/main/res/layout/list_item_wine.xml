<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/list_item_wine_description_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:padding="4dp"
        tools:text="Wine Description" />

    <TextView
        android:id="@+id/list_item_wine_id_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/list_item_wine_price_text_view"
        android:layout_below="@id/list_item_wine_description_text_view"
        android:padding="4dp"
        tools:text="Crime Date" />

    <TextView
        android:id="@+id/list_item_wine_price_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/list_item_wine_id_text_view"
        android:layout_below="@id/list_item_wine_description_text_view"
        android:padding="4dp"
        tools:text="Crime Date" />

</RelativeLayout>